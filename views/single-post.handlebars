<article class="post">
  <div class="title">
    {{post.title}} <span>- By {{post.user.username}} on {{format_date post.created_at}} </span>
  </div>
  <div class="content">
    {{post.post_content}}
  </div>
</article>
{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>
{{/if}}

  {{> comments post.comments}}

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}